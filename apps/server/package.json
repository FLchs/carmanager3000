{
  "name": "@cm3k/server",
  "type": "module",
  "imports": {
    "#*": "./src/*.ts"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "openapi": "bun run --hot src/openapi.ts",
    "lint": "oxlint",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@cm3k/contract": "workspace:*",
    "@cm3k/validation": "workspace:*",
    "@hono/swagger-ui": "^0.5.2",
    "@libsql/client": "^0.15.15",
    "@orpc/client": "^1.12.2",
    "@orpc/openapi": "^1.12.2",
    "@orpc/server": "^1.12.2",
    "@orpc/zod": "^1.12.2",
    "drizzle-orm": "^1.0.0-beta.2-b782ae1",
    "drizzle-seed": "^1.0.0-beta.2-b782ae1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.7",
    "swagger-ui": "^5.30.3",
    "swagger-ui-dist": "^5.30.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/swagger-ui": "^5.21.1",
    "@types/swagger-ui-dist": "^3.30.6",
    "oxlint": "^1.31.0",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/ui": "^4.0.15",
    "drizzle-kit": "^1.0.0-beta.2-b782ae1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.3",
    "vitest": "^4.0.14"
  }
}
